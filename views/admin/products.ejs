<%- include ('../_layouts/admin_header') %>

    <h2 class="page-title">Products</h2>
    <a href="/admin/products/add-product" class="btn btn-primary">Add a new product</a>
    <br><br>

    <% if (count > 0) { %>

        <table class="table table-stripped align-mid">
            <thead>
                <tr class="home">
                    <th>Product</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Product Image</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product) => { %>
                    <tr>
                        <td><%= product.title %></td>
                        <td><%= parseFloat(product.price).toFixed(2) %> VND</td>
                        <td><%= product.category %></td>
                        <td>
                            <% if (product.image == "") { %>
                                <img id="noImg" src="/images/noimage.png" alt="">
                            <% } else { %> 
                                <img id="noImg" src="/product_images/<%= product._id %>/<%= product.image %>" alt="">
                            <% } %>
                        </td>
                        <td><a href="products/edit-product/<%= product._id %>">Edit</a></td>
                        <td><a class="confirmDelete" href="products/delete-product/<%= product.id %>">Delete</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <h3 class="text-center"> No product here</h3>
    <% } %>
    
<%- include ('../_layouts/admin_footer') %>