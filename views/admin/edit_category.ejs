<%- include ('../_layouts/admin_header') %>
    <h2 class="page-title">Edit Category</h2>
    <a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
    <br><br>

    <form action="/admin/categories/edit-category/<%= id %>" method="post">
        <div class="form-group">
            <label for="">Category</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title" required>
        </div>

        <button type="submit" class="btn btn-default"> Submit </button>
    </form>
<%- include ('../_layouts/admin_footer') %>